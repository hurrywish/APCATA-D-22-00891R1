&GLOBAL
  PROJECT Reaction_NOO2toNO2
  RUN_TYPE MD
  PRINT_LEVEL MEDIUM 
&END GLOBAL

&FORCE_EVAL
  METHOD Quickstep
  
  &DFT
    UKS T
    MULTIPLICITY 2
    BASIS_SET_FILE_NAME ./BASIS_MOLOPT
    POTENTIAL_FILE_NAME ./GTH_POTENTIALS
    WFN_RESTART_FILE_NAME ./XXX
        
    &MGRID
      NGRIDS 4
      CUTOFF 550
      REL_CUTOFF 60 
    &END MGRID
    
    &XC
	 &XC_FUNCTIONAL PBE
	 	&END XC_FUNCTIONAL
	 		&VDW_POTENTIAL
				DISPERSION_FUNCTIONAL PAIR_POTENTIAL
				&PAIR_POTENTIAL
					TYPE DFTD3
					PARAMETER_FILE_NAME dftd3.dat
					REFERENCE_FUNCTIONAL PBE
					R_CUTOFF 15
				&END PAIR_POTENTIAL
			&END VDW_POTENTIAL
    &END XC
    
    &QS
		EPS_DEFAULT 1.0E-14
		EXTRAPOLATION ASPC
		EXTRAPOLATION_ORDER 3
	&END QS
		
	&SCF
		MAX_SCF     300
		EPS_SCF     1E-06
		SCF_GUESS   RESTART
		&OT T
			MINIMIZER CG
			LINESEARCH 3PNT
			PRECONDITIONER	FULL_SINGLE_INVERSE
		&END OT
		&OUTER_SCF T
			EPS_SCF 1.0E-05
			MAX_SCF 100
		&END OUTER_SCF
		&END SCF
	&END DFT

  &SUBSYS
    &CELL
      ABC 16.924 16.924 23.934
      ALPHA_BETA_GAMMA  90 90 90
    &END CELL
    
    &TOPOLOGY
		COORD_FILE_NAME ./XXX
		COORD_FILE_FORMAT CIF
	&END TOPOLOGY
		
	&KIND Si
		BASIS_SET DZVP-MOLOPT-SR-GTH
		POTENTIAL GTH-PBE-q4
    &END KIND
    
	&KIND O
		BASIS_SET DZVP-MOLOPT-SR-GTH
        POTENTIAL GTH-PBE-q6
    &END KIND
    
    &KIND Cu
    	BASIS_SET DZVP-MOLOPT-SR-GTH
    	POTENTIAL GTH-PBE-q11
    &END KIND

    &KIND Al
    	BASIS_SET DZVP-MOLOPT-SR-GTH
    	POTENTIAL GTH-PBE-q3
    &END KIND

    &KIND N
		BASIS_SET DZVP-MOLOPT-SR-GTH
    	POTENTIAL GTH-PBE-q5
   &END KIND
   
    &COLVAR
		&COMBINE_COLVAR
			&COLVAR
				&DISTANCE
					ATOMS 290 291
				&END DISTANCE
			&END COLVAR
			&COLVAR
				&DISTANCE
					ATOMS 292 293
				&END DISTANCE
			&END COLVAR	
			FUNCTION CV1+CV2
			VARIABLES CV1 CV2
			ERROR_LIMIT 1E-8
		&END COMBINE_COLVAR
	&END COLVAR

	&COLVAR
		&COORDINATION
			ATOMS_FROM 292
			ATOMS_TO 291 290
			R_0 [angstrom] 1.14
			NN 9
			ND 14
		&END COORDINATION
	&END COLVAR
	
    &END SUBSYS
		&EXTERNAL_POTENTIAL 
			ATOMS_LIST XXX
			FUNCTION A*((X-X0)^2)^4
			PARAMETERS A X0
			VALUES 1E-6 XXX
			UNITS eV angstrom
    &END EXTERNAL_POTENTIAL
    
		&EXTERNAL_POTENTIAL 
			ATOMS_LIST XXX
			FUNCTION B*((Y-Y0)^2)^4
			PARAMETERS B Y0
			VALUES 1E-6 XXX
			UNITS eV angstrom
    &END EXTERNAL_POTENTIAL
    
		&EXTERNAL_POTENTIAL 
			ATOMS_LIST XXX
			FUNCTION C*((Z-Z0)^2)^4
			PARAMETERS C Z0
			VALUES 1E-6 XXX
			UNITS eV angstrom
		&END EXTERNAL_POTENTIAL
	
&END FORCE_EVAL
	 
&MOTION	

  &CONSTRAINT
    &FIXED_ATOMS
		LIST 200
		LIST 194
		LIST 192
		LIST 178
		LIST 247
		LIST 241
		LIST 199
		LIST 193
		LIST 191
		LIST 177
		LIST 248
		LIST 242
		
		LIST 183
		LIST 184
		LIST 204
		LIST 255
		LIST 203
		LIST 256
		LIST 208
		LIST 251
		LIST 207
		LIST 252
		LIST 187
		LIST 188
		
		LIST 106
		LIST 136
		LIST 110
		LIST 132
		LIST 134
		LIST 108
		LIST 130
		LIST 112
    &END FIXED_ATOMS
  &END CONSTRAINT
	
    &MD
		ENSEMBLE NVT
		STEPS 10000
		TIMESTEP 1
		TEMPERATURE 673
		&THERMOSTAT
			TYPE NOSE
			&NOSE
				LENGTH 3
				YOSHIDA 3
				MTS 2
				TIMECON [fs] 100
			&END NOSE
		&END THERMOSTAT
	&END MD
	
   &PRINT
     &TRAJECTORY
       &EACH
       		MD 1
       &END EACH
     &END TRAJECTORY
     
     &VELOCITIES
     	&EACH
     		MD 1
     	&END EACH
     &END VELOCITIES
     
   	 &RESTART
		&EACH
			MD 30
		&END EACH
   	 &END RESTART

    &RESTART_HISTORY OFF
    &END RESTART_HISTORY

   &END PRINT	
  
  &FREE_ENERGY
  	&METADYN 
  		DO_HILLS
  		NT_HILLS 30
  		WW 0.003		
		
  		
  		&METAVAR
  			SCALE 0.3
  			COLVAR 1
		&WALL
			TYPE QUADRATIC
			POSITION [angstrom] 2.2
			&QUADRATIC WALL_MINUS
			K [kcalmol] 60
			&END QUADRATIC
		&END WALL			
		&WALL
			TYPE QUADRATIC
			POSITION [angstrom] 8.0
			&QUADRATIC WALL_PLUS
			K [kcalmol] 60
			&END QUADRATIC
		&END WALL
  		 &END METAVAR
  		
 		&METAVAR
  			SCALE 0.3
  			COLVAR 2
  		&END METAVAR
  		
  	&PRINT	
  		&COLVAR
  			COMMON_ITERATION_LEVELS 3
  		&END COLVAR
  		&HILLS
  			COMMON_ITERATION_LEVELS 3
  		&END HILLS
  	&END PRINT
  	
  	&END METADYN
  &END FREE_ENERGY

&END MOTION

&EXT_RESTART
	RESTART_FILE_NAME ./XXX
	RESTART_COUNTERS F
	RESTART_POS T
	RESTART_VEL T
	RESTART_THERMOSTAT T
	RESTART_METADYNAMICS T
&END EXT_RESTART
